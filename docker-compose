version: "3.7"
services:
frontend:
build: ./frontend
ports: - '3000:3000'
container_name: mern-ui
networks: - mern-stack-net
volumes: - ./frontend/src:/App/src
depends_on: - backend

backend:
build: ./backend
ports: - 3001:3001
environment:
DB_URL: mongodb://db/Csteam
volumes: - ./backend:/app
container_name: mern-api
networks: - mern-stack-net

database:
image: mongo
ports: - 27017:27017
volumes: - Csteam:/data/db
container_name: mongo-db
networks: - mern-stack-net

networks:
mern-stack-net:
driver: bridge
volumes:
Csteam:
data:
logs:
